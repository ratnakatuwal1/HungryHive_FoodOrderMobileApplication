<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    tools:context=".ThankYouActivity">

    <TextView
        android:id="@+id/textViewCongrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congrats!"
        android:textSize="@dimen/_30sdp"
        android:textColor="@color/HeadingTextColor"
        android:fontFamily="@font/orbitron"
        android:letterSpacing=".14"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCongratsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/congratsTitle"
        android:layout_marginTop="@dimen/_24sdp"
        android:textColor="@color/SubHeadingTextColor"
        android:fontFamily="@font/zenantique"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/textViewCongrats"
        app:layout_constraintStart_toStartOf="@+id/textViewCongrats"
        app:layout_constraintTop_toBottomOf="@+id/textViewCongrats" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewTickMark"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_60sdp"
        app:layout_constraintEnd_toEndOf="@+id/textViewCongratsTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewCongratsTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewCongratsTitle"
        android:src="@drawable/thankyoupageimage"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGoHome"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/nextbutton"
        android:fontFamily="@font/zenantique"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:letterSpacing=".15"
        android:text="Go Home"
        android:layout_marginTop="@dimen/_80sdp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewTickMark"
        app:layout_constraintStart_toStartOf="@+id/imageViewTickMark"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTickMark" />
</androidx.constraintlayout.widget.ConstraintLayout>