<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/BackgroundColor"
    android:layout_gravity="center">

    <!-- "You May Also Like" Title -->
    <TextView
        android:id="@+id/textViewYouMayAlsoLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You may also like"
        android:textSize="24sp"
        android:letterSpacing=".1"
        android:textStyle="bold"
        android:fontFamily="@font/orbitron"
        android:textColor="@color/HeadingTextColor"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

    <!-- Food Image -->
    <ImageView
        android:id="@+id/imageViewYouMayLike"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:contentDescription="foodImage"
        android:layout_gravity="center" />

    <!-- Food Name -->
    <TextView
        android:id="@+id/textViewYouMayLikeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/zenantique"
        android:textColor="@color/HeadingTextColor"
        android:layout_marginBottom="8dp"
        android:text=""
        android:layout_gravity="center"/>

    <!-- Food Description -->
    <TextView
        android:id="@+id/textViewYouMayLikeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/SecondaryTextColor"
        android:fontFamily="@font/zenantique"
        android:layout_marginBottom="12dp"
        android:text=""
        android:layout_gravity="center"/>

    <!-- Price -->
    <TextView
        android:id="@+id/textViewYouMayLikePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/zenantique"
        android:textColor="@color/PrimaryColor"
        android:layout_marginBottom="16dp"
        android:text=""
        android:layout_gravity="center"/>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- View Details Button -->
        <Button
            android:id="@+id/buttonViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/zenantique"
            android:text="View Details"
            android:backgroundTint="@color/PrimaryColor"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="16sp"/>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:fontFamily="@font/zenantique"
            android:backgroundTint="@color/AccentColor"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/buttonAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:fontFamily="@font/zenantique"
            android:backgroundTint="@color/PrimaryColor"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
